<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="12dp"
    android:layout_marginBottom="20dp"
    android:background="@android:color/transparent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgRoom"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:src="@drawable/bg_demo"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="#40000000"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerBLBRSize10Percent"
        app:layout_constraintBottom_toBottomOf="@id/imgRoom"
        app:layout_constraintLeft_toLeftOf="@id/imgRoom"
        app:layout_constraintRight_toRightOf="@id/imgRoom" />

    <TextView
        android:id="@+id/tvRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_margin="5dp"
        android:text="Xây dựng website học tiếng nhật AMEE"
        android:maxLines="3"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>