<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgCourse"
        app:layout_constraintTop_toTopOf="@id/txtNameCourse"
        app:layout_constraintBottom_toBottomOf="@id/txtClass"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/icon_book"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:tint="#E57373" />


    <TextView
        android:id="@+id/txtNameCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Name Course"
        android:textColor="@color/primaryText"
        app:layout_constraintEnd_toStartOf="@+id/txtMark"
        app:layout_constraintStart_toEndOf="@id/imgCourse"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtClass"
        android:text="1810A05"
        app:layout_constraintTop_toBottomOf="@id/txtNameCourse"
        app:layout_constraintStart_toStartOf="@id/txtNameCourse"
        app:layout_constraintEnd_toEndOf="@id/txtNameCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtMark"
        app:layout_constraintTop_toTopOf="@id/txtNameCourse"
        app:layout_constraintBottom_toBottomOf="@id/txtClass"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="10.0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16.0sp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        app:tint="#E57373" />

    <View
        app:layout_constraintStart_toStartOf="@id/txtClass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtClass"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_shadow_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>